package decisao;

import javax.swing.JOptionPane;

public class DecisaoSimples {
	public static void main(String[] args) {

		/*
		 * Capturar:
		 * - nome da disciplina
		 * - primeira nota
		 * - segunda nota
		 * - calcular media
		 * - exibir media
		 */
		
		String disciplina = JOptionPane.showInputDialog("Digite Nome da Disciplina: ");
		double primeiranota = Double.parseDouble(JOptionPane.showInputDialog("Digite a Primeira Nota: "));
		double segundanota = Double.parseDouble(JOptionPane.showInputDialog("Digite a Segunda Nota: "));
		double media = ((primeiranota + segundanota)/2);
		System.out.println("Sua media na materia " + disciplina + " eh: " + media);
		
	}
}
